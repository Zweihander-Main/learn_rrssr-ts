{
	"compilerOptions": {
		"baseUrl": "./src",
		"paths": {
			"~*": ["./*"]
		},
		"typeRoots": ["node_modules/@types"],
		"esModuleInterop": true,
		"sourceMap": true,
		"jsx": "react",
		"outDir": "./public/",
		"lib": ["es6", "dom"],
		"moduleResolution": "Node",
		"module": "ESNext"
	},
	"include": ["./src"],
	"exclude": ["node_modules", "public"]
}
